{
  "buildCommand": "cd frontend && npm install react@18.2.0 react-dom@18.2.0 next@14.0.4 babel-plugin-module-resolver --no-save --force && npm run build",
  "installCommand": "npm install",
  "outputDirectory": "frontend/.next",
  "env": {
    "NEXT_PUBLIC_API_URL": "https://surveypro-ir3u.onrender.com",
    "PRESERVE_ORIGINAL_PAGES": "true",
    "NEXT_TELEMETRY_DISABLED": "1",
    "SKIP_TYPE_CHECK": "true",
    "NODE_ENV": "production",
    "NEXT_SHARP_PATH": "/tmp/node_modules/sharp",
    "NEXT_IGNORE_ESLINT": "true"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://surveypro-ir3u.onrender.com/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization" }
      ]
    }
  ]
} 
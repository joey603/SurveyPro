{
  "framework": "nextjs",
  "buildCommand": "./build-vercel.sh",
  "installCommand": "npm install --force",
  "outputDirectory": ".next",
  "regions": ["cdg1"],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://surveypro-backend.onrender.com"
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://surveypro-backend.onrender.com/api/:path*"
    }
  ],
  "routes": [
    { "src": "/survey-answer", "dest": "/survey-answer" },
    { "src": "/survey-answer/(.*)", "dest": "/survey-answer" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/" }
  ]
} 